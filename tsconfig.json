{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "jsx": "react",
    "noEmit": true,
    "skipLibCheck": true,
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "types": ["dom", "jest"],
    "typeRoots": ["./lib/typings", "./node_modules/@types"]
  },
  "include": ["lib/**/*"]
}
