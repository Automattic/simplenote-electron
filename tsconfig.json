{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": ["lib/typings/*"]
    },
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "jsx": "react",
    "noEmit": true,
    "skipLibCheck": true,
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "typeRoots": ["./lib/typings", "./node_modules/@types"]
  },
  "include": ["lib/**/*"]
}
